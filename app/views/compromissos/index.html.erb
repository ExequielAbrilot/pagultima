<p id="notice"><%= notice %></p>

<h1>Listing Compromissos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compromissos.each do |compromisso| %>
      <tr>
        <td><%= compromisso.titulo %></td>
        <td><%= compromisso.texto %></td>
        <td><%= compromisso.date %></td>
        <td><%= link_to 'Show', compromisso %></td>
        <td><%= link_to 'Edit', edit_compromisso_path(compromisso) %></td>
        <td><%= link_to 'Destroy', compromisso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'nuevo compromiso', new_compromisso_path %>

<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-%d") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-%d") %>
  </h2>
  <%= calendar_for @compromissos, :year => @date.year, :month => @date.month do |t| %>
  <%= t.head('DOMINGO','LUNES', 'MARTES', 'MIERCOLES', 'JUEVES', 'VIERNES', 'SABADO') %>
  <%= t.day do |day, compromissos| %>
  <%= day.day %>
  <% compromissos.each do |compromisso| %><br>
  <%= link_to h(compromisso.titulo), compromisso %><br>
  <%= link_to 'Editar', edit_compromisso_path(compromisso) %> | <%= link_to 'Deletar', compromisso, method: :delete, data: { confirm: 'Esta seguro?' } %>
  <% end %>
  <% end %>
  <% end %>
</div>
<%= link_to 'Nuevo comprosimo', new_compromisso_path %>



